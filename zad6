#include <stdio.h>
#define RZEDY 4
#define WIERSZE 5

char x = '$';
int v, c;
int main(void)
{

for(v = RZEDY; v >= 0; --v)
    {
    for(c = v; c < WIERSZE; c++)
    printf("%c", x);
    printf("\n");
    }
    getchar();
    return 0;
}

zad3
#include <stdio.h>
#define START 'F'
#define END 'A'

char x,k;
int main()
  {
    for(k=START;k>=END;--k,
        printf("\n"))
    for(x=START;x>=k;--x)
        printf("%c",x);
    return 0;
  }





