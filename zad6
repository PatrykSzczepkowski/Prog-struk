zad 1.6

#include <stdio.h>
#include <stdlib.h>

int main()
{
 char lista[26];
    char znak;
    	for(int i = 0; i<26; i++){
    		printf("%d:",i+1);
        scanf(" %c", &znak);
        lista[i] = znak;
    }
    int i = 0;
    while(lista[i]!='\0'){
        printf("%c", lista[i]);
        i++;
    }
}

