#include <stdio.h>
#include <stdlib.h>
int suma(int *a, int *b);
int main()
{
    int x,y;
    printf("Podaj x:\n");
    scanf("%d", &x);
    printf("Podaj y:\n");
    scanf("%d", &y);
    printf("x= %d, y=%d\n", x, y);
    int w=suma(&x,&y);
    printf("Suma: %d", w);
    return 0;
}
int suma(int *a, int *b)
{
   return *a+*b;
}
